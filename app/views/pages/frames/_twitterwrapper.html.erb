<%= link_to "https://www.twitter.com/#{current.user}", target: "_blank" do %>
  <div class="tumblr-1 twitter" 
       style="width: <%= width %>%;
              height: <%= height %>%;
              top: <%= top %>%;
              background-color: <%= define_colors %>;
              left: <%= left %>%;
              border-color: <%= define_colors %>;
              ">
    <div class="row">
      <div class="col-xs-12">
        <div class="author" style="color: white;"><%= current.user.truncate(20) %></div>
        <div class="date" style= "color: white;"><%= time_ago_in_words current.date %></div>
      </div>
      <div class="col-xs-12">
        <div class="message" style= "color: white;"><%= current.tweet.truncate(50)%></div>
      </div>
    </div>
  </div>
<% end %>
